<Page x:Class="BilgiYarismasi.Views.SoruSil"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BilgiYarismasi.Views"
      mc:Ignorable="d" 
      Height="285" Width="558"
      Title="SoruSil">

        <Grid Background="LightBlue">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

        <TextBlock 
                Grid.Column="0" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Left" 
                FontWeight="Bold"
                FontFamily="arial"
                FontSize="30"
                Margin="25 0 0 0">
                 Soru id giriniz:
        </TextBlock>

        <TextBox Grid.Row="0" x:Name="txt_delete" Height="50" Width="279" Background="LightCoral" Margin="250 0 0 0" Tag="0" FontSize="25" />

        <Button Grid.Row="1" Width="150" Height="60" Background="LightBlue" 
                    RenderTransformOrigin="0.378,0.488" Content="Veriyi Sil" Click="Btn_Delete"/>
            <Button Grid.Row="1" Width="150" Height="60" Background="LightBlue" 
                    Margin="389,0,19,0" Content="Tümünü Sil" Click="Btn_ClearAll"/>
    </Grid>
</Page>
